<UserControl x:Class="WPF_Project1_Shop.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Project1_Shop.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <PasswordBox x:Name="txtPassword"
                 FontSize="13"
                 FontWeight="Medium"
                 FontFamily="Montserrat"
                 Foreground="White"
                 CaretBrush="LightGray"
                 BorderBrush="DarkGray"
                 BorderThickness="0,0,0,2"
                 Margin="0,5,0,0"
                 Padding="20,0,0,0"
                 VerticalContentAlignment="Center">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/WPF-Project1-Shop;component/Images/password.png" Stretch="None" AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>

</UserControl>
