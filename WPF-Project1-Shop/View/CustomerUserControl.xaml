<UserControl x:Class="WPF_Project1_Shop.View.CustomerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Project1_Shop.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>



        <ListView Grid.Row="0"
                  Grid.Column="0"
                  Margin="10, 10, 10, 10">
            <ListView ItemsSource="{Binding Customers}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}"
                                       Margin="10,0,0,0" />

                            <TextBlock Text="{Binding Phone}"
                                       Margin="10,0,0,0" />

                            <TextBlock Text="{Binding Email}"
                                       Margin="10,0,0,0" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ListView>


        <Grid Grid.Column="1" Margin="10, 10, 10, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>

            <Label VerticalAlignment="Center"
                   Grid.Column="0"
                   Content="Name" />
            <TextBox x:Name="Name"
                     Grid.Row="0"
                     VerticalAlignment="Center"
                     Grid.Column="1" />

            <Label VerticalAlignment="Center"
                   Grid.Row="1"
                   Grid.Column="0"
                   Content="Email" />
            <TextBox x:Name="Email"
                     Grid.Row="1"
                     VerticalAlignment="Center"
                     Grid.Column="1" />

            <Label VerticalAlignment="Center"
                   Grid.Row="2"
                   Grid.Column="0"
                   Content="Phone" />
            <TextBox x:Name="Phone"
                     Grid.Row="2"
                     VerticalAlignment="Center"
                     Grid.Column="1" />

            <Label VerticalAlignment="Center"
                   Grid.Row="3"
                   Grid.Column="0"
                   Content="Address" />
            <TextBox x:Name="Address"
                     Grid.Row="3"
                     VerticalAlignment="Center"
                     Grid.Column="1" />

            <TabControl SelectedIndex="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="4">
                <TabItem Header="Customer info">
                    <StackPanel>
                        <Label Content="{Binding FirstName}"
                               d:Content="Customer name: Nguyen Van Hoang" />
                        <Label Content="{Binding Phone}"
                               d:Content="Phone number: 12345678" />
                        <Label Content="{Binding Email}"
                               d:Content="Email: Nvhoang@coldmail.com" />
                        <Label Content="{Binding Address}"
                               d:Content="Address: 420 Huynh Van Banh Q3, P3, HCM" />
                    </StackPanel>
                </TabItem>
            </TabControl>

            <WrapPanel HorizontalAlignment="Right"
                       Grid.ColumnSpan="2"
                       Grid.Row="5">
                <Button 
                        Padding="20,0,20,0"
                        Content="Save" />
            </WrapPanel>
        </Grid>


    </Grid>
</UserControl>
