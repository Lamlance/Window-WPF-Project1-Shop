<Window x:Class="WPF_Project1_Shop.View.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project1_Shop" 
        xmlns:Fluent="urn:fluent-ribbon" 
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextbox" 
        mc:Ignorable="d"
        Loaded="MainWindowLoaded"
        WindowState="Maximized" 
        Title="Orders" Height="720" Width="1280">

  <DockPanel>
    <Fluent:Ribbon
      x:Name="Ribbon"
      DockPanel.Dock="Top"
      d:SelectedTabIndex="0">
      <Fluent:Ribbon.Menu>
        <Fluent:Backstage>
          <Fluent:BackstageTabControl>
            <Fluent:BackstageTabItem Header="Search" />
            <Fluent:BackstageTabItem Header="Add" />
            <Fluent:BackstageTabItem Header="Edit" />
            <Fluent:BackstageTabItem Header="Data" />
          </Fluent:BackstageTabControl>
        </Fluent:Backstage>
      </Fluent:Ribbon.Menu>
      <!-- Order tab -->
      <Fluent:RibbonTabItem 
        Header="Orders"
        x:Name="OrderDataTab">

        <!-- Filter  Group -->
        <Fluent:RibbonGroupBox
          Header="Filter">
          <Fluent:DropDownButton
            x:Name="btnFilterDateHeaderFilter"
            Header="Filter Date">
            <Fluent:DropDownButton.Icon>
              <iconPacks:PackIconUnicons
                Kind="Calender"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </Fluent:DropDownButton.Icon>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
              </Grid.RowDefinitions>

              <Label 
                Content="From" />
              <DatePicker 
                x:Name="datePickerFromOrderFilter"
                Grid.Column="1"
                IsTodayHighlighted="True" />

              <Label 
                Grid.Row="1"
                Content="To" />
              <DatePicker 
                x:Name="datePickerToOrderFilter"
                Grid.Row="1"
                Grid.Column="1"
                IsTodayHighlighted="True" />

            </Grid>
          </Fluent:DropDownButton>

          <Fluent:DropDownButton 
            x:Name="btnFilterPriceHeaderFilter"
            Header="Filter Sum">
            <Fluent:DropDownButton.Icon>
              <iconPacks:PackIconUnicons
                Kind="MoneyBill"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </Fluent:DropDownButton.Icon>

            <Grid
              MinWidth="200">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
              </Grid.RowDefinitions>

              <Label 
                Content="From" />
              <currency:CurrencyTextBox
                x:Name="txtMoneyFromOderFilter"
                TextAlignment="Left"
                VerticalContentAlignment="Center"
                currency:StringFormat="C0"
                currency:Culture="vi-VN"
                Grid.Column="1" />

              <Label 
                Grid.Row="1"
                Content="To" />
              <currency:CurrencyTextBox
                x:Name="txtMoneyToOrderFilter"
                Grid.Row="1"
                TextAlignment="Left"
                VerticalContentAlignment="Center"
                currency:StringFormat="C0"
                currency:Culture="vi-VN"
                Grid.Column="1" />

            </Grid>

          </Fluent:DropDownButton>
        </Fluent:RibbonGroupBox>
        <!-- /Filter Group -->

        <!-- Search Customer Group -->
        <Fluent:RibbonGroupBox
          Header="Filter Customer">
          <Grid MinWidth="300">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="1*"/>
              <RowDefinition Height="1*"/>
              <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label 
              Content="Address" />
            <Fluent:TextBox 
              x:Name="txtBoxAddressOrderFilter"
              Grid.Column="1" />

            <Label 
              Grid.Row="1"
              Content="Email" />
            <Fluent:TextBox 
              x:Name="txtBoxEmailOrderFilter"
              Grid.Row="1"
              Grid.Column="1" />
            <Label 
              Grid.Row="2"
              Content="Phone" />
            <Fluent:TextBox 
              x:Name="txtBoxPhoneOrderFilter"
              PreviewTextInput="PreviewTxtInputNumberOnly"
              Grid.Row="2"
              Grid.Column="1" />
          </Grid>
        </Fluent:RibbonGroupBox>
        <!-- /SearchTab -->

        <Fluent:RibbonGroupBox
          Header="Apply filter">
          <MenuItem 
            x:Name="menuApplyDateFilterOrder"
            IsCheckable="True"
            Header="Appy date">
            <MenuItem.Icon>
              <iconPacks:PackIconUnicons
                Kind="Calender"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </MenuItem.Icon>
          </MenuItem>

          <MenuItem 
            x:Name="menuApplySumFilterOrder"
            IsCheckable="True"
            Header="Appy sum">
            <MenuItem.Icon>
              <iconPacks:PackIconUnicons
                Kind="MoneyBill"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </MenuItem.Icon>
          </MenuItem>

          <MenuItem 
            x:Name="menuApplyCustomerFilterOrder"
            IsCheckable="True"
            Header="Appy seaches">
            <MenuItem.Icon>
              <iconPacks:Codicons
                Kind="Person"/>
            </MenuItem.Icon>
          </MenuItem>

          <Fluent:Button
            Header="Search!">
            <Fluent:Button.Icon>
              <iconPacks:PackIconUnicons 
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Kind="Search" />
            </Fluent:Button.Icon>
          </Fluent:Button>

        </Fluent:RibbonGroupBox>

        <Fluent:RibbonGroupBox
          Header="Manual mode">
          
          <Fluent:ToggleButton
            Header="Edit order"
            GroupName="DataMode">
            <Fluent:ToggleButton.Icon>
              <iconPacks:PackIconUnicons
                Kind="Edit"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </Fluent:ToggleButton.Icon>
          </Fluent:ToggleButton>

          <Fluent:ToggleButton
            Header="Add order"
            GroupName="DataMode">
            <Fluent:ToggleButton.Icon>
              <iconPacks:PackIconUnicons
                Kind="FilePlusAlt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </Fluent:ToggleButton.Icon>
          </Fluent:ToggleButton>

          <Fluent:ToggleButton
            Header="Delete order"
            GroupName="DataMode">
            <Fluent:ToggleButton.Icon>
              <iconPacks:PackIconUnicons
                Kind="FilePlusAlt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </Fluent:ToggleButton.Icon>
          </Fluent:ToggleButton>

        </Fluent:RibbonGroupBox>

      </Fluent:RibbonTabItem>
      <!-- /Order ta -->
      
      <!-- Product Tab -->
      <Fluent:RibbonTabItem 
        Header="Products"
        x:Name="ProductDataTab">
      </Fluent:RibbonTabItem>
      <!-- /Product Tab -->

    </Fluent:Ribbon>


    <Grid DockPanel.Dock="Bottom">
      <TabControl 
        SelectedIndex="{Binding ElementName=Ribbon,Path=SelectedTabIndex}"
        x:Name="MainTabControl" >
        
      </TabControl>
    </Grid>


  </DockPanel>
</Window>
