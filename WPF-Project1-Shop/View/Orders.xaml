<Window x:Class="WPF_Project1_Shop.View.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project1_Shop" 
        xmlns:Fluent="urn:fluent-ribbon" 
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextbox"
        mc:Ignorable="d"
        Title="Orders" Height="720" Width="1280">

  <DockPanel>
    <Fluent:Ribbon DockPanel.Dock="Top">
      <Fluent:Ribbon.Menu>
        <Fluent:Backstage>
          <Fluent:BackstageTabControl>
            <Fluent:BackstageTabItem Header="Search" />
            <Fluent:BackstageTabItem Header="Add" />
            <Fluent:BackstageTabItem Header="Edit" />
            <Fluent:BackstageTabItem Header="Data" />
          </Fluent:BackstageTabControl>
        </Fluent:Backstage>
      </Fluent:Ribbon.Menu>

      <!-- SearchTab -->
      <Fluent:RibbonTabItem 
        Header="Search"
        x:Name="OrderSearchHeader">

        <!-- Filter  Group -->
        <Fluent:RibbonGroupBox
          Header="Filter">
          <Fluent:DropDownButton
            x:Name="btnFilterDateHeaderFilter"
            Header="Filter Date">
            <Fluent:DropDownButton.Icon>
              <iconPacks:PackIconUnicons
                Kind="Calender"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </Fluent:DropDownButton.Icon>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
              </Grid.RowDefinitions>

              <Label 
                Content="From" />
              <DatePicker 
                Grid.Column="1"
                IsTodayHighlighted="True" />

              <Label 
                Grid.Row="1"
                Content="To" />
              <DatePicker 
                Grid.Row="1"
                Grid.Column="1"
                IsTodayHighlighted="True" />

            </Grid>
          </Fluent:DropDownButton>

          <Fluent:DropDownButton 
            x:Name="btnFilterPriceHeaderFilter"
            Header="Filter Sum">
            <Fluent:DropDownButton.Icon>
              <iconPacks:PackIconUnicons
                Kind="MoneyBill"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </Fluent:DropDownButton.Icon>

            <Grid
              MinWidth="200">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
              </Grid.RowDefinitions>

              <Label 
                Content="From" />
              <currency:CurrencyTextBox
                TextAlignment="Left"
                VerticalContentAlignment="Center"
                currency:StringFormat="C0"
                currency:Culture="vi-VN"
                Grid.Column="1" />

              <Label 
                Grid.Row="1"
                Content="To" />
              <currency:CurrencyTextBox
                Grid.Row="1"
                TextAlignment="Left"
                VerticalContentAlignment="Center"
                currency:StringFormat="C0"
                currency:Culture="vi-VN"
                Grid.Column="1" />

            </Grid>

          </Fluent:DropDownButton>
        </Fluent:RibbonGroupBox>
        <!-- /Filter Group -->

        <!-- Search Customer Group -->
        <Fluent:RibbonGroupBox
          Header="Filter Customer">
          <Grid MinWidth="300">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="1*"/>
              <RowDefinition Height="1*"/>
              <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label 
              Content="Address" />
            <Fluent:TextBox 
              Grid.Column="1" />

            <Label 
              Grid.Row="1"
              Content="Email" />
            <Fluent:TextBox 
              Grid.Row="1"
              Grid.Column="1" />
            <Label 
              Grid.Row="2"
              Content="Phone" />
            <Fluent:TextBox 
              PreviewTextInput="PreviewTxtInputNumberOnly"
              Grid.Row="2"
              Grid.Column="1" />
          </Grid>
        </Fluent:RibbonGroupBox>
        <!-- /SearchTab -->

        <Fluent:RibbonGroupBox
          Header="Apply filter">
          <MenuItem 
            IsCheckable="True"
            Header="Appy date">
            <MenuItem.Icon>
              <iconPacks:PackIconUnicons
                Kind="Calender"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </MenuItem.Icon>
          </MenuItem>

          <MenuItem 
            IsCheckable="True"
            Header="Appy sum">
            <MenuItem.Icon>
              <iconPacks:PackIconUnicons
                Kind="MoneyBill"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            </MenuItem.Icon>
          </MenuItem>

          <MenuItem 
            IsCheckable="True"
            Header="Appy seaches">
            <MenuItem.Icon>
              <iconPacks:Codicons
                Kind="Person"/>
            </MenuItem.Icon>
          </MenuItem>

          <Fluent:Button
            Header="Search!">
            <Fluent:Button.Icon>
              <iconPacks:PackIconUnicons 
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Kind="Search" />
            </Fluent:Button.Icon>
          </Fluent:Button>
          
        </Fluent:RibbonGroupBox>

      </Fluent:RibbonTabItem>

    </Fluent:Ribbon>


    <Grid DockPanel.Dock="Bottom">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>

      <ListView 
      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
      ScrollViewer.VerticalScrollBarVisibility="Visible"
      ScrollViewer.CanContentScroll="True"
      VerticalContentAlignment="Top"  
      x:Name="ListOrder"
      Loaded="ListOrderLoaded"
      Grid.ColumnSpan="3">
        <ListView.ItemsPanel>
          <ItemsPanelTemplate>
            <UniformGrid Columns="1" />
          </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.ItemTemplate>
          <DataTemplate>
            <Label Content="{Binding Name}" />
          </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.ItemContainerStyle>
          <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
          </Style>
        </ListView.ItemContainerStyle>
      </ListView>

      <Grid 
      
      Grid.Column="3" 
      Grid.ColumnSpan="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Label 
        Grid.Column="0" 
        Content="Product name"/>
        <TextBox 
        Padding="10"
        VerticalAlignment="Top"
        Grid.Column="1"/>
      </Grid>
    </Grid>


  </DockPanel>
</Window>
