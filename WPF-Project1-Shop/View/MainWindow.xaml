<Window x:Class="WPF_Project1_Shop.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project1_Shop.View"
        xmlns:Fluent="urn:fluent-ribbon"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextbox"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Loaded="MainWindowLoaded"
        WindowState="Maximized"
        Title="EShop"
        Height="720"
        Width="1280">
    <Window.Resources>
        <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.Background">#241F3A</SolidColorBrush>
        <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.TabsGrid.Background">#241F3A</SolidColorBrush>
        <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.Content.Background">#241F3A</SolidColorBrush>
        <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonWindow.TitleBackground">#241F3A</SolidColorBrush>

    </Window.Resources>


    <DockPanel LastChildFill="True"
               Background="#efefef">
        <Fluent:Ribbon CanMinimize="False"
                       SelectedTabChanged="SelectTabChange"
                       x:Name="Ribbon"
                       DockPanel.Dock="Top"
                       d:SelectedTabIndex="1">

            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                    <Fluent:BackstageTabControl>
                        <Fluent:BackstageTabItem Header="User">
                            <DockPanel LastChildFill="True">
                                <ContentControl VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                x:Name="UserInfoContentControl">
                                </ContentControl>
                                <StackPanel Margin="30,0,0,0"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical"
                                            DockPanel.Dock="Right">
                                    <TextBlock FontSize="26"
                                               Text="Window - WPF Shop Project" />
                                    <TextBlock FontSize="26"
                                               Text="20127047 - Nguyen Xuan Hoang Lam" />
                                    <TextBlock FontSize="26"
                                               Text="20127591 - Han Tho Nhat Phu" />
                                    <TextBlock FontSize="26"
                                               Text="20127435 - Tran Van An" />
                                </StackPanel>
                            </DockPanel>

                        </Fluent:BackstageTabItem>
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>

            <Fluent:RibbonTabItem Width="100"
                                  Height="40"
                                  Foreground="#F0EFF8"
                                  Header="Dashboard"
                                  x:Name="DashboardDataTab">
                <Fluent:RibbonTabItem.Style>
                    <Style TargetType="{x:Type Fluent:RibbonTabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Fluent:RibbonTabItem}">
                                    <Border x:Name="Border"
                                            Background="#241F3A"
                                            BorderBrush="#241F3A"
                                            BorderThickness="0">
                                        <StackPanel Orientation="Vertical"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <ContentPresenter ContentSource="Header" />
                                            <ContentPresenter />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#342752" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Fluent:RibbonTabItem.Style>
                <Fluent:RibbonGroupBox Header="GroupBox"
                                       Height="0"
                                       Width="0"
                                       Visibility="Collapsed" />
            </Fluent:RibbonTabItem>

            <!-- Order tab -->
            <Fluent:RibbonTabItem Header="Orders"
                                  Width="100"
                                  Height="40"
                                  Foreground="#F0EFF8"
                                  x:Name="OrderDataTab">
                <Fluent:RibbonTabItem.Style>
                    <Style TargetType="{x:Type Fluent:RibbonTabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Fluent:RibbonTabItem}">
                                    <Border x:Name="Border"
                                            Background="#241F3A"
                                            BorderBrush="#241F3A"
                                            BorderThickness="0">
                                        <StackPanel Orientation="Vertical"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <ContentPresenter ContentSource="Header" />
                                            <ContentPresenter />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#342752" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Fluent:RibbonTabItem.Style>

                <!-- Filter  Group -->
                <Fluent:RibbonGroupBox Header="Filter Date"
                                       Foreground="#F0EFF8">
                    <Grid MinWidth="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Label Content="From"
                               Margin="5 5 5 5"
                               Foreground="#F0EFF8" />
                        <DatePicker Padding="3 3 3 3"
                                    x:Name="datePickerFromOrderFilter"
                                    Background="#F0EFF8"
                                    Foreground="Black"
                                    Grid.Column="1"
                                    IsTodayHighlighted="True">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Foreground"
                                            Value="#F0EFF8" />
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>

                        <Label Foreground="#F0EFF8"
                               Margin="5 5 5 5"
                               Grid.Row="1"
                               Content="To" />
                        <DatePicker Padding="3 3 3 3"
                                    Background="#F0EFF8"
                                    Foreground="Black"
                                    x:Name="datePickerToOrderFilter"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    IsTodayHighlighted="True">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Foreground"
                                            Value="#F0EFF8" />
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Grid>
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox Header="Filter Sum"
                                       Foreground="#F0EFF8">
                    <Grid MinWidth="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Label Content="From"
                               Margin="5 5 5 5"
                               Foreground="#F0EFF8" />
                        <currency:CurrencyTextBox Padding="3 3 3 3"
                                                  Margin="1 1 1 1"
                                                  x:Name="txtMoneyFromOderFilter"
                                                  TextAlignment="Left"
                                                  VerticalContentAlignment="Center"
                                                  currency:StringFormat="C0"
                                                  currency:Culture="vi-VN"
                                                  Grid.Column="1" />
                        <Label Margin="5 5 5 5"
                               Foreground="#F0EFF8"
                               Grid.Row="1"
                               Content="To" />
                        <currency:CurrencyTextBox Margin="1 1 1 1"
                                                  Padding="3 3 3 3"
                                                  x:Name="txtMoneyToOrderFilter"
                                                  Grid.Row="1"
                                                  TextAlignment="Left"
                                                  VerticalContentAlignment="Center"
                                                  currency:StringFormat="C0"
                                                  currency:Culture="vi-VN"
                                                  Grid.Column="1" />
                    </Grid>
                </Fluent:RibbonGroupBox>

                <!-- /Filter Group -->

                <!-- Search Customer Group -->
                <Fluent:RibbonGroupBox Header="Filter Customer"
                                       Foreground="#F0EFF8">
                    <Grid MinWidth="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Label Content="Address"
                               Foreground="#F0EFF8" />
                        <Fluent:TextBox Foreground="#F0EFF8"
                                        Padding="3 3 3 3"
                                        x:Name="txtBoxAddressOrderFilter"
                                        Grid.Column="1" />

                        <Label Foreground="#F0EFF8"
                               Grid.Row="1"
                               Content="Email" />
                        <Fluent:TextBox Foreground="#F0EFF8"
                                        Padding="3 3 3 3"
                                        x:Name="txtBoxEmailOrderFilter"
                                        Grid.Row="1"
                                        Grid.Column="1" />
                        <Label Foreground="#F0EFF8"
                               Grid.Row="2"
                               Content="Phone" />
                        <Fluent:TextBox Foreground="#F0EFF8"
                                        Padding="3 3 3 3"
                                        x:Name="txtBoxPhoneOrderFilter"
                                        PreviewTextInput="PreviewTxtInputNumberOnly"
                                        Grid.Row="2"
                                        Grid.Column="1" />
                    </Grid>
                </Fluent:RibbonGroupBox>
                <!-- /SearchTab -->

                <Fluent:RibbonGroupBox Header="Apply filter"
                                       Foreground="#F0EFF8">
                    <MenuItem x:Name="menuApplyDateFilterOrder"
                              Foreground="#F0EFF8"
                              IsCheckable="True"
                              Header="Appy date">
                        <MenuItem.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="CalendarSlash"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />-->
                            <Image Source="/Images/Icons/calendar_apply.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem x:Name="menuApplySumFilterOrder"
                              Foreground="#F0EFF8"
                              IsCheckable="True"
                              Header="Appy sum">
                        <MenuItem.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="MoneyBillSlash"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />-->
                            <Image Source="/Images/Icons/money_bill_add.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem x:Name="menuApplyCustomerFilterOrder"
                              Foreground="#F0EFF8"
                              IsCheckable="True"
                              Header="Appy searches">
                        <MenuItem.Icon>
                            <!--<iconPacks:FontAwesome 
                Kind="UserSlashSolid" />-->
                            <Image Source="/Images/Icons/check_circle.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>

                    <Fluent:Button Click="SearchOrderBtnClick"
                                   Header="Search"
                                   Foreground="#F0EFF8">
                        <Fluent:Button.Icon>
                            <!--<iconPacks:PackIconUnicons 
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Kind="Search" />-->
                            <Image Source="/Images/Icons/search.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:Button.Icon>
                    </Fluent:Button>

                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Manual modify"
                                       Foreground="#F0EFF8">

                    <Fluent:ToggleButton Checked="OrderEditModeChecked"
                                         Header="Edit order"
                                         Foreground="#F0EFF8"
                                         GroupName="OderDataMode">
                        <Fluent:ToggleButton.Icon>
                            <!--<iconPacks:PackIconUnicons
                Kind="Edit"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />-->
                            <Image Source="/Images/Icons/edit.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:ToggleButton.Icon>
                    </Fluent:ToggleButton>

                    <Fluent:ToggleButton Checked="OrderAddModeChecked"
                                         Header="Add order"
                                         Foreground="#F0EFF8"
                                         GroupName="OderDataMode">
                        <Fluent:ToggleButton.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="FilePlusAlt"           
                HorizontalAlignment="Center"                                       
                VerticalAlignment="Center" />-->
                            <Image Source="/Images/Icons/add_order.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:ToggleButton.Icon>
                    </Fluent:ToggleButton>

                    <Fluent:ToggleButton Checked="OrderDeleteModeChecked"
                                         Header="Delete order"
                                         Foreground="#F0EFF8"
                                         GroupName="OderDataMode">
                        <Fluent:ToggleButton.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="FilePlusAlt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />-->
                            <Image Source="/Images/Icons/delete_order.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:ToggleButton.Icon>
                    </Fluent:ToggleButton>

                </Fluent:RibbonGroupBox>

            </Fluent:RibbonTabItem>
            <!-- /Order tab -->


            <!-- Product Tab -->
            <Fluent:RibbonTabItem Header="Products"
                                  Width="100"
                                  Height="40"
                                  Foreground="#F0EFF8"
                                  x:Name="ProductDataTab">

                <Fluent:RibbonTabItem.Style>
                    <Style TargetType="{x:Type Fluent:RibbonTabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Fluent:RibbonTabItem}">
                                    <Border x:Name="Border"
                                            Background="#241F3A"
                                            BorderBrush="#241F3A"
                                            BorderThickness="0">
                                        <StackPanel Orientation="Vertical"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <ContentPresenter ContentSource="Header" />
                                            <ContentPresenter />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#342752" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Fluent:RibbonTabItem.Style>

                <Fluent:RibbonGroupBox Header="Categories">
                    <Fluent:DropDownButton Header="Filter categories"
                                           Foreground="#F0EFF8">
                        <Fluent:DropDownButton.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="LayerGroup"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch" />-->
                            <Image Source="/Images/Icons/filter_category.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:DropDownButton.Icon>
                        <ListView Loaded="CategoriesListLoaded"
                                  x:Name="ListRibbonCategoriesList"
                                  MinWidth="300">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Fluent:UniformGridWithItemSize />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Fluent:CheckBox Content="{Binding}"
                                                     Unchecked="CategoryUnchecked"
                                                     Checked="CategoryChecked"
                                                     Header="{Binding CategoryName}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Fluent:DropDownButton>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Price search">
                    <Grid MinWidth="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Label Content="Start Price"
                               Margin="5 5 5 5"
                               Foreground="#F0EFF8" />
                        <currency:CurrencyTextBox Padding="3 3 3 3"
                                                  Margin="1 1 1 1"
                                                  x:Name="txtMoneyFromProductFilter"
                                                  VerticalContentAlignment="Center"
                                                  TextAlignment="Left"
                                                  StringFormat="C0"
                                                  Culture="vi-VN"
                                                  Grid.Column="1" />
                        <Label Margin="5 5 5 5"
                               Foreground="#F0EFF8"
                               Grid.Row="1"
                               Content="End Price" />
                        <currency:CurrencyTextBox Padding="3 3 3 3"
                                                  Margin="1 1 1 1"
                                                  x:Name="txtMoneyToProductFilter"
                                                  VerticalContentAlignment="Center"
                                                  TextAlignment="Left"
                                                  Grid.Row="1"
                                                  StringFormat="C0"
                                                  Culture="vi-VN"
                                                  Grid.Column="1" />
                    </Grid>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Name search">
                    <Grid MinWidth="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Label Foreground="#F0EFF8"
                               Grid.Column="0"
                               Content="Product name"
                               VerticalAlignment="Center" />
                        <TextBox Background="#F0EFF8"
                                 Padding="3 3 3 3"
                                 VerticalAlignment="Center"
                                 FontSize="14"
                                 x:Name="txtBoxNameProductFilter"
                                 VerticalContentAlignment="Center"
                                 Grid.Column="1" />
                    </Grid>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Apply search">

                    <MenuItem x:Name="menuApplyCategoriesProductFilter"
                              IsCheckable="true"
                              Foreground="#F0EFF8"
                              Header="Apply categories">
                        <MenuItem.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="LayerGroupSlash"/>-->
                            <Image Source="/Images/Icons/apply_category.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="menuApplyPriceProductFilter"
                              IsCheckable="true"
                              Foreground="#F0EFF8"
                              Header="Apply price">
                        <MenuItem.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="MoneyBillSlash"/>-->
                            <Image Source="/Images/Icons/apply_product.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="menuApplyNameProductFilter"
                              IsCheckable="true"
                              Foreground="#F0EFF8"
                              Header="Apply name">
                        <MenuItem.Icon>
                            <!--<iconPacks:FontAwesome 
                Kind="UserSlashSolid"/>-->
                            <Image Source="/Images/Icons/check_circle.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>

                    <Fluent:Button Click="SearchProductBtnClick"
                                   Foreground="#F0EFF8"
                                   Header="Search">
                        <Fluent:Button.Icon>
                            <!--<iconPacks:PackIconUnicons 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Kind="Search" />-->
                            <Image Source="/Images/Icons/search.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:Button.Icon>
                    </Fluent:Button>

                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Manual modify"
                                       Foreground="#F0EFF8">

                    <Fluent:ToggleButton Checked="ProductEditModeChecked"
                                         Header="Edit product"
                                         Foreground="#F0EFF8"
                                         GroupName="ProductDataMode">
                        <Fluent:ToggleButton.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="Edit"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />-->
                            <Image Source="/Images/Icons/edit_product.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:ToggleButton.Icon>
                    </Fluent:ToggleButton>

                    <Fluent:ToggleButton Checked="ProductAddModeChecked"
                                         Header="Add product"
                                         Foreground="#F0EFF8"
                                         GroupName="ProductDataMode">
                        <Fluent:ToggleButton.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="FilePlusAlt"         
                HorizontalAlignment="Center"                            
                VerticalAlignment="Center" />-->
                            <Image Source="/Images/Icons/add_product.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:ToggleButton.Icon>
                    </Fluent:ToggleButton>

                    <Fluent:ToggleButton Checked="ProductDeleteModeChecked"
                                         Header="Delete product"
                                         Foreground="#F0EFF8"
                                         GroupName="ProductDataMode">
                        <Fluent:ToggleButton.Icon>
                            <!--<iconPacks:PackIconUnicons 
                Kind="FilePlusAlt"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />-->
                            <Image Source="/Images/Icons/remove_product.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:ToggleButton.Icon>
                    </Fluent:ToggleButton>

                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Data Import">
                    <Fluent:Button Click="ImportProductFromAccessBtnClick"
                                   Foreground="#F0EFF8"
                                   Header="Access">
                        <Fluent:Button.Icon>
                            <!--<iconPacks:PackIconUnicons 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Kind="Database"/>-->
                            <Image Source="/Images/Icons/database.png"
                                   Width="24"
                                   Height="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Fluent:Button.Icon>
                    </Fluent:Button>

                </Fluent:RibbonGroupBox>

            </Fluent:RibbonTabItem>
            <!-- /Product Tab -->


            <!-- Customer tab -->
            <Fluent:RibbonTabItem Header="Customers"
                                  Width="100"
                                  Foreground="#F0EFF8"
                                  Height="40">

                <Fluent:RibbonTabItem.Style>
                    <Style TargetType="{x:Type Fluent:RibbonTabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Fluent:RibbonTabItem}">
                                    <Border x:Name="Border"
                                            Background="#241F3A"
                                            BorderBrush="#241F3A"
                                            BorderThickness="0">
                                        <StackPanel Orientation="Vertical"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <ContentPresenter ContentSource="Header" />
                                            <ContentPresenter />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#342752" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Fluent:RibbonTabItem.Style>
                <!-- Search Customer Group -->
                <Fluent:RibbonGroupBox Header="Filter Customer Name">
                    <Grid MinWidth="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>


                        <Label Content="First name"
                               Foreground="#F0EFF8" />
                        <Fluent:TextBox x:Name="txtBoxFirstNameCustomerFilter"
                                        Grid.Column="1" />
                        <Label Grid.Row="1"
                               Foreground="#F0EFF8"
                               Content="Middle name" />
                        <Fluent:TextBox x:Name="txtBoxMiddleNameCustomerFilter"
                                        Grid.Row="1"
                                        Grid.Column="1" />
                        <Label Foreground="#F0EFF8"
                               Grid.Row="2"
                               Content="Last name" />
                        <Fluent:TextBox x:Name="txtBoxLastNameCustomerFilter"
                                        Grid.Row="2"
                                        Grid.Column="1" />
                    </Grid>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Filter Customer Information">
                    <Grid MinWidth="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Content="Email"
                               Foreground="#F0EFF8" />
                        <Fluent:TextBox x:Name="txtBoxEmailCustomer"
                                        Grid.Row="0"
                                        Grid.Column="1" />
                        <Label Grid.Row="1"
                               Content="Phone"
                               Foreground="#F0EFF8" />
