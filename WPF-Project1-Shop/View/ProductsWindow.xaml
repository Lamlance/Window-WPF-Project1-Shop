                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <ListView Loaded="ListProductLoaded" x:Name="ProductListView" Grid.ColumnSpan="3" Grid.RowSpan="3" d:ItemsSource="{d:SampleData ItemCount=3}">
