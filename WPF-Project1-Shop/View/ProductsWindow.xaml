                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <StackPanel x:Name="ProductStackPanel" Width="220" Grid.Row="0" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                                <TextBlock Height="18" d:Background="Yellow" Text="{Binding Id}"/>
                                <Image d:Source="https://lh3.googleusercontent.com/yJCvE-14wXXcu1QfQM-JyYth6m-qxCMNL0hwdxCZQxtTe2F0d0oyCgFTD7DRpysSNR-FdE9I9A0AS4Fk3oGA7eLF4xSx50VQ=w500-h500-rw" 
                                Width="200" Height="65"/>
                                <TextBlock Height="18" Background="Red" Text="{Binding Brand}"/>
                                <TextBlock Height="47" Background="Orange" Text="{Binding ProductName}"/>
                                <TextBlock Height="18" Background="Beige" Text="{Binding Price, StringFormat='Price: {0:C2}'}"/>
                                <TextBlock Height="18" Background="Blue" Text="{Binding Quantity}"/>
